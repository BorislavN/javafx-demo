<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="337.0" prefWidth="412.0" spacing="20.0" style="-fx-background-color: #c9c7c7;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.chat.fxchat.ChatController">
    <padding>
        <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
    </padding>
   <Label fx:id="errorMessage" alignment="CENTER" prefWidth="${usernameInput.width}" contentDisplay="CENTER" graphicTextGap="8.0" layoutX="144.0" layoutY="136.0" style="-fx-background-color: #eb4d42; -fx-background-radius: 6; -fx-font-weight: bold;" text="Invalid username!" textAlignment="CENTER" textFill="#fffdfd" visible="true">
      <padding>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </padding>
      <font>
         <Font size="16.0" />
      </font>
   </Label>

    <Label alignment="CENTER" style="-fx-font-weight: bold;" text="Choose an username:" textAlignment="CENTER">
      <font>
         <Font size="16.0" />
      </font></Label>
   <TextField fx:id="usernameInput" style="-fx-background-radius: 2;">
      <font>
         <Font size="14.0" />
      </font>
   </TextField>
   <Button fx:id="joinBtn" mnemonicParsing="false" onAction="#onJoinClick" style="-fx-background-color: #515254; -fx-background-radius: 6;" text="Join" textFill="#f2f2f2">
      <padding>
         <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
      </padding>
      <font>
         <Font size="18.0" />
      </font>
      <cursor>
         <Cursor fx:constant="HAND" />
      </cursor>
   </Button>
</VBox>
