<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<VBox style="-fx-background-color: #c9c7c7;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="app.chat.fxchat.ChatController">

    <VBox fx:id="usernamePage" alignment="CENTER" prefHeight="337.0" prefWidth="412.0" spacing="20.0" managed="false" visible="false">
        <padding>
            <Insets bottom="20.0" left="30.0" right="30.0" top="20.0"/>
        </padding>
        <Label fx:id="errorMessage" alignment="CENTER" contentDisplay="CENTER" graphicTextGap="8.0" layoutX="144.0"
               layoutY="136.0" prefWidth="${usernameInput.width}"
               style="-fx-background-color: #eb4d42; -fx-background-radius: 6; -fx-font-weight: bold;"
               text="Invalid username!" textAlignment="CENTER" textFill="#fffdfd" visible="true">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <font>
                <Font size="16.0"/>
            </font>
        </Label>

        <Label alignment="CENTER" style="-fx-font-weight: bold;" text="Choose an username:" textAlignment="CENTER">
            <font>
                <Font size="16.0"/>
            </font>
        </Label>
        <TextField fx:id="usernameInput" style="-fx-background-radius: 2;">
            <font>
                <Font size="14.0"/>
            </font>
        </TextField>
        <Button fx:id="joinBtn" mnemonicParsing="false" onAction="#onJoinClick"
                style="-fx-background-color: #515254; -fx-background-radius: 6;" text="Join" textFill="#f2f2f2">
            <padding>
                <Insets bottom="15.0" left="20.0" right="20.0" top="15.0"/>
            </padding>
            <font>
                <Font size="18.0"/>
            </font>
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </Button>
    </VBox>

    <VBox fx:id="mainPage" alignment="TOP_CENTER" minHeight="500" minWidth="450" managed="true" visible="true">
        <TextArea fx:id="textArea" disable="true" editable="false" style="-fx-background-color: #f2f2f0;"
                  wrapText="true" VBox.vgrow="ALWAYS">
            <VBox.margin>
                <Insets/>
            </VBox.margin>
        </TextArea>
        <HBox alignment="CENTER" spacing="5.0">
            <TextField promptText="Enter message" HBox.hgrow="ALWAYS">
                <font>
                    <Font size="16.0"/>
                </font>
            </TextField>
            <Button fx:id="send" mnemonicParsing="false" onAction="#onSend" text="Send"
                    style="-fx-background-color: #515254; -fx-background-radius: 6;" textFill="#f2f2f2">
                <font>
                    <Font size="16.0"/>
                </font>
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
            </Button>
            <Button fx:id="changeUsername" mnemonicParsing="false" onAction="#onChangeName" text="Change username"
                    style="-fx-background-color: #515254; -fx-background-radius: 6;" textFill="#f2f2f2">
                <font>
                    <Font size="16.0"/>
                </font>
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
            </Button>
            <VBox.margin>
                <Insets top="10.0"/>
            </VBox.margin>
        </HBox>
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </padding>
    </VBox>
</VBox>
