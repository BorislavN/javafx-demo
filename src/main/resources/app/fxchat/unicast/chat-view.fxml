<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="600.0" spacing="10.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.fxchat.unicast.ChatController">

    <Label fx:id="announcementMessage" alignment="CENTER" contentDisplay="CENTER" graphicTextGap="8.0" layoutX="144.0" layoutY="136.0" maxWidth="1.7976931348623157E308" text="Welcome, Jack!" textAlignment="CENTER" textFill="#fffdfd" VBox.vgrow="ALWAYS">
        <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
        </padding>
    </Label>
    <HBox prefHeight="100.0" prefWidth="200.0" spacing="5.0">
        <Button maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onShowMessages" text="Direct Messages" HBox.hgrow="SOMETIMES" />
        <Button fx:id="backBtn" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onChangeName" text="Change name" HBox.hgrow="SOMETIMES">
        </Button>
    </HBox>
    <TextArea fx:id="chatArea" editable="false" minHeight="300.0" style="-fx-background-color: #f2f2f0;-fx-font-size: 16" wrapText="true" VBox.vgrow="ALWAYS">
    </TextArea>
    <HBox alignment="CENTER" spacing="5.0">
        <TextField fx:id="messageInput" onAction="#onEnter" promptText="Enter message" HBox.hgrow="ALWAYS">
        </TextField>
        <Button fx:id="sendBtn" minWidth="100.0" mnemonicParsing="false" onAction="#onSend" text="Send">
        </Button>
    </HBox>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
