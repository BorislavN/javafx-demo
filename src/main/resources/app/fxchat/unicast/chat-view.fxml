<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="app.fxchat.unicast.ChatController"
      stylesheets="@style.css"
      prefHeight="400.0" prefWidth="600.0">

    <Label fx:id="announcementMessage" alignment="CENTER" contentDisplay="CENTER" graphicTextGap="8.0" layoutX="144.0"
           layoutY="136.0" prefWidth="${chatArea.width}" textAlignment="CENTER" textFill="#fffdfd">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
        <font>
            <Font size="16.0"/>
        </font>
    </Label>
    <TextArea fx:id="chatArea" editable="false" style="-fx-background-color: #f2f2f0;-fx-font-size: 16"
              wrapText="true" VBox.vgrow="ALWAYS">
        <VBox.margin>
            <Insets top="10.0"/>
        </VBox.margin>
    </TextArea>
    <HBox alignment="CENTER" spacing="5.0">
        <TextField fx:id="messageInput" onAction="#onEnter" promptText="Enter message" HBox.hgrow="ALWAYS">
            <font>
                <Font size="16.0"/>
            </font>
        </TextField>
        <Button fx:id="sendBtn" mnemonicParsing="false" onAction="#onSend" style="-fx-background-radius: 3;"
                text="Send">
            <font>
                <Font size="16.0"/>
            </font>
        </Button>
        <Button mnemonicParsing="false" onAction="#onChangeName" style="-fx-background-radius: 3;"
                text="Change name">
            <font>
                <Font size="16.0"/>
            </font>
        </Button>
        <VBox.margin>
            <Insets top="10.0"/>
        </VBox.margin>
    </HBox>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
</VBox>
